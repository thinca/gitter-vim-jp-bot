{
  "compilerOptions": {
    "outDir": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "exclude": [],
  "include": [
    "src/**/*.ts"
  ]
}
